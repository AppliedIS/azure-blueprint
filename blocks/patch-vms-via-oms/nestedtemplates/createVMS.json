{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "adminUsername": {
            "type": "string"
        },
        "adminPassword": {
            "type": "securestring"
        },
        "vmName": {
            "type": "string"
        },
        "dnsLabelPrefix": {
            "type": "string"
        },
        "workspaceName": {
            "type": "string"
        },
        "virtualMachineSettings": {
            "type": "object"
        },
        "ResourceGroupName": {
            "type": "string"
        },
        "AutomationAccountName": {
            "type": "string"
        },
        "AzureUserName": {
            "type": "string"
        },
        "AzurePassword": {
            "type": "securestring"
        },
        "SubscriptionId": {
            "type": "string"
        },
        "EnvironmentName": {
            "type": "string"
        },
        "DSCHybridWorkersIdURL": {
            "type": "string"
        },
        "DSCHybridWorkersIdConfigurationFunction": {
            "type": "string"
        },
        "windowsOSVersion": {
            "type": "string",
            "defaultValue": "2012-R2-Datacenter",
            "allowedValues": [
                "2008-R2-SP1",
                "2012-Datacenter",
                "2012-R2-Datacenter",
                "Windows-Server-Technical-Preview"
            ],
            "metadata": {
                "description": "The Windows version for the VM. This will pick a fully patched image of this given Windows version. Allowed values: 2008-R2-SP1, 2012-Datacenter, 2012-R2-Datacenter, Windows-Server-Technical-Preview."
            }
        }
    },
    "variables": {
        "vnetID": "[resourceId('Microsoft.Network/virtualNetworks', concat(parameters('vmName'), variables('vmSettings').virtualNetworkName))]",
        "subnetRef": "[concat(variables('vnetID'),'/subnets/',variables('vmSettings').subnetName)]",
        "vmSettings": "[parameters('virtualMachineSettings')]"
    },
    "resources": [{
            "type": "Microsoft.Storage/storageAccounts",
            "name": "[variables('vmSettings').storageAccountName]",
            "apiVersion": "[variables('vmSettings').apiVersion]",
            "location": "[resourceGroup().location]",
            "properties": {
                "accountType": "[variables('vmSettings').storageAccountType]"
            }
        },
        {
            "apiVersion": "[variables('vmSettings').apiVersion]",
            "type": "Microsoft.Network/publicIPAddresses",
            "name": "[concat(parameters('vmName'), variables('vmSettings').publicIPAddressName)]",
            "location": "[resourceGroup().location]",
            "properties": {
                "publicIPAllocationMethod": "[variables('vmSettings').publicIPAddressType]",
                "dnsSettings": {
                    "domainNameLabel": "[concat(toLower(parameters('vmName')),parameters('dnsLabelPrefix'))]"
                }
            }
        },
        {
            "apiVersion": "[variables('vmSettings').apiVersion]",
            "type": "Microsoft.Network/virtualNetworks",
            "name": "[concat(parameters('vmName'),variables('vmSettings').virtualNetworkName)]",
            "location": "[resourceGroup().location]",
            "properties": {
                "addressSpace": {
                    "addressPrefixes": [
                        "[variables('vmSettings').addressPrefix]"
                    ]
                },
                "subnets": [{
                    "name": "[variables('vmSettings').subnetName]",
                    "properties": {
                        "addressPrefix": "[variables('vmSettings').subnetPrefix]"
                    }
                }]
            }
        },
        {
            "apiVersion": "[variables('vmSettings').apiVersion]",
            "type": "Microsoft.Network/networkInterfaces",
            "name": "[concat(parameters('vmName'),variables('vmSettings').nicName)]",
            "location": "[resourceGroup().location]",
            "dependsOn": [
                "[concat('Microsoft.Network/publicIPAddresses/', parameters('vmName'), variables('vmSettings').publicIPAddressName)]",
                "[concat('Microsoft.Network/virtualNetworks/', parameters('vmName'), variables('vmSettings').virtualNetworkName )]"
            ],
            "properties": {
                "ipConfigurations": [{
                    "name": "ipconfig1",
                    "properties": {
                        "privateIPAllocationMethod": "Dynamic",
                        "publicIPAddress": {
                            "id": "[resourceId('Microsoft.Network/publicIPAddresses', concat(parameters('vmName'),variables('vmSettings').publicIPAddressName))]"
                        },
                        "subnet": {
                            "id": "[variables('subnetRef')]"
                        }
                    }
                }]
            }
        },
        {
            "apiVersion": "2015-06-15",
            "type": "Microsoft.Compute/virtualMachines",
            "name": "[parameters('vmName')]",
            "location": "[resourceGroup().location]",
            "dependsOn": [
                "[concat('Microsoft.Storage/storageAccounts/', variables('vmSettings').storageAccountName)]",
                "[concat('Microsoft.Network/networkInterfaces/', parameters('vmName'),variables('vmSettings').nicName)]"
            ],
            "properties": {
                "hardwareProfile": {
                    "vmSize": "[variables('vmSettings').vmSize]"
                },
                "osProfile": {
                    "computerName": "[parameters('vmName')]",
                    "adminUsername": "[parameters('adminUsername')]",
                    "adminPassword": "[parameters('adminPassword')]"
                        /*"windowsConfiguration": {
                            "provisionVMAgent": true,
                            "enableAutomaticUpdates": true,
                            "timeZone": "Eastern Standard Time" //https://social.technet.microsoft.com/wiki/contents/articles/29554.change-time-zone-of-azure-role-instances-vm-s.aspx
                        }*/
                },
                "storageProfile": {
                    "imageReference": {
                        "publisher": "[variables('vmSettings').imagePublisher]",
                        "offer": "[variables('vmSettings').imageOffer]",
                        "sku": "[parameters('windowsOSVersion')]",
                        "version": "latest"
                    },
                    "osDisk": {
                        "name": "osdisk",
                        "vhd": {
                            "uri": "[concat('http://',variables('vmSettings').storageAccountName,'.blob.core.usgovcloudapi.net/',variables('vmSettings').vmStorageAccountContainerName,'/', variables('vmSettings').OSDiskName,parameters('vmName') ,'.vhd')]"
                        },
                        "caching": "ReadWrite",
                        "createOption": "FromImage"
                    }
                },
                "networkProfile": {
                    "networkInterfaces": [{
                        "id": "[resourceId('Microsoft.Network/networkInterfaces', concat(parameters('vmName'),variables('vmSettings').nicName))]"
                    }]
                },
                "diagnosticsProfile": {
                    "bootDiagnostics": {
                        "enabled": "true",
                        "storageUri": "[concat('http://',variables('vmSettings').storageAccountName,'.blob.core.usgovcloudapi.net')]"
                    }
                }
            },
            "resources": [
                /*{
                "type": "extensions",
                "name": "EnterpriseCloudMonitoring",
                "apiVersion": "[variables('vmSettings').apiVersion]",
                "location": "[resourceGroup().location]",
                "dependsOn": [
                    "[concat('Microsoft.Compute/virtualMachines/', parameters('vmName'))]"
                ],
                "properties": {
                    "publisher": "Microsoft.EnterpriseCloud.Monitoring",
                    "type": "MicrosoftMonitoringAgent",
                    "typeHandlerVersion": "1.0",
                    "autoUpgradeMinorVersion": true,
                    "settings": {
                        "workspaceId": "[reference(resourceId('Microsoft.OperationalInsights/workspaces/', parameters('workspaceName')), '2015-03-20').customerId]"
                    },
                    "protectedSettings": {
                        "workspaceKey": "[listKeys(resourceId('Microsoft.OperationalInsights/workspaces/', parameters('workspaceName')), '2015-03-20').primarySharedKey]"
                    }
                }
            }*/
            ]
        },
        {
            "type": "Microsoft.Compute/virtualMachines/extensions",
            "name": "[concat(parameters('vmName'),'/GetHybridWorkersId')]",
            "apiVersion": "2015-06-15",
            "location": "[resourceGroup().location]",
            "dependsOn": [
                "[concat('Microsoft.Compute/virtualMachines/', parameters('vmName'))]",
                "[resourceId('Microsoft.Compute/virtualMachines/extensions/', parameters('vmName'),'EnterpriseCloudMonitoring')]"
                // "Microsoft.Resources/deployments/CreateOMSWorkspace",
                // "createVMsLoop"
            ],
            "properties": {
                "publisher": "Microsoft.Powershell",
                "type": "DSC",
                "typeHandlerVersion": "2.19",
                "autoUpgradeMinorVersion": false,
                "settings": {
                    "modulesURL": "[parameters('DSCHybridWorkersIdURL')]",
                    "configurationFunction": "[parameters('DSCHybridWorkersIdConfigurationFunction')]",
                    "properties": {
                        "MachineName": "[parameters('vmName')]",
                        "ResourceGroupName": "[parameters('ResourceGroupName')]",
                        "AutomationAccountName": "[parameters('AutomationAccountName')]",
                        "AzureAuthCreds": {
                            "UserName": "[parameters('AzureUserName')]",
                            "Password": "PrivateSettingsRef:AzurePassword"
                        },
                        "SubscriptionId": "[parameters('SubscriptionId')]",
                        "EnvironmentName": "[parameters('EnvironmentName')]"
                    }
                },
                "protectedSettings": {
                    "items": {
                        "AzurePassword": "[parameters('AzurePassword')]"
                    }
                }
            }
        }

    ],
    "outputs": {
        "VMKey": {
            "type": "string",
            "value": "[reference(resourceId('Microsoft.Compute/virtualMachines', parameters('vmName')))]"
        }
    }
}