{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
  "parameters": {
    "resourceNames": {
      "type": "object"
    },
    "numberOfWebInstances": {
      "type": "int"
    },
    "keyVaultName": {
      "type": "string"
    },
    "vmEncryptionSettings": {
      "type": "object"
    },
    "aadClientID": {
      "type": "securestring"
    },
    "aadClientSecret": {
      "type": "securestring"
    },
    "keyEncryptionKeyURL": {
      "type": "securestring",
      "metadata": {
        "description": "KeyVault key encryption key Url. Ex: https://diskencryptiontestaus.vault.azure.net/keys/DiskEncryptionKek/562a4bb76b524a1493a6afe8e536ee78"
      }
    }
  },
  "variables": {},
  "resources": [
    {
      "type": "Microsoft.Compute/virtualMachines/extensions",
      "name": "[concat(parameters('resourceNames').vms.adpdc,'/', parameters('vmEncryptionSettings').diskEncryptionExtensionName)]",
      "apiVersion": "2016-04-30-preview",
      "tags": {
        "Project": "BluePrint"
      },
      "location": "[resourceGroup().location]",
      "properties": {
        "publisher": "Microsoft.Azure.Security",
        "type": "AzureDiskEncryption",
        "typeHandlerVersion": "[parameters('vmEncryptionSettings').diskEncryptionExtensionVersion]",
        "autoUpgradeMinorVersion": true,
        "forceUpdateTag": "[parameters('vmEncryptionSettings').sequenceVersion]",
        "settings": {
          "AADClientID": "[parameters('aadClientID')]",
          "KeyVaultURL": "[parameters('vmEncryptionSettings').keyVaultURL]",
          "KeyEncryptionKeyURL": "[parameters('keyEncryptionKeyURL')]",
          "KeyEncryptionAlgorithm": "[parameters('vmEncryptionSettings').keyEncryptionAlgorithm]",
          "VolumeType": "[parameters('vmEncryptionSettings').volumeType]",
          "EncryptionOperation": "[parameters('vmEncryptionSettings').encryptionOperation]"
        },
        "protectedSettings": {
          "AADClientSecret": "[parameters('aadClientSecret')]"
        }
      }
    },
    {
      "type": "Microsoft.Compute/virtualMachines/extensions",
      "name": "[concat(parameters('resourceNames').vms.adbdc,'/', parameters('vmEncryptionSettings').diskEncryptionExtensionName)]",
      "apiVersion": "2016-04-30-preview",
      "tags": {
        "Project": "BluePrint"
      },
      "location": "[resourceGroup().location]",
      "properties": {
        "publisher": "Microsoft.Azure.Security",
        "type": "AzureDiskEncryption",
        "typeHandlerVersion": "[parameters('vmEncryptionSettings').diskEncryptionExtensionVersion]",
        "autoUpgradeMinorVersion": true,
        "forceUpdateTag": "[parameters('vmEncryptionSettings').sequenceVersion]",
        "settings": {
          "AADClientID": "[parameters('aadClientID')]",
          "KeyVaultURL": "[parameters('vmEncryptionSettings').keyVaultURL]",
          "KeyEncryptionKeyURL": "[parameters('keyEncryptionKeyURL')]",
          "KeyEncryptionAlgorithm": "[parameters('vmEncryptionSettings').keyEncryptionAlgorithm]",
          "VolumeType": "[parameters('vmEncryptionSettings').volumeType]",
          "EncryptionOperation": "[parameters('vmEncryptionSettings').encryptionOperation]"
        },
        "protectedSettings": {
          "AADClientSecret": "[parameters('aadClientSecret')]"
        }
      }
    },
    {
      "type": "Microsoft.Compute/virtualMachines/extensions",
      "name": "[concat(parameters('resourceNames').vms.mgt,'/', parameters('vmEncryptionSettings').diskEncryptionExtensionName)]",
      "apiVersion": "2016-04-30-preview",
      "tags": {
        "Project": "BluePrint"
      },
      "location": "[resourceGroup().location]",
      "properties": {
        "publisher": "Microsoft.Azure.Security",
        "type": "AzureDiskEncryption",
        "typeHandlerVersion": "[parameters('vmEncryptionSettings').diskEncryptionExtensionVersion]",
        "autoUpgradeMinorVersion": true,
        "forceUpdateTag": "[parameters('vmEncryptionSettings').sequenceVersion]",
        "settings": {
          "AADClientID": "[parameters('aadClientID')]",
          "KeyVaultURL": "[parameters('vmEncryptionSettings').keyVaultURL]",
          "KeyEncryptionKeyURL": "[parameters('keyEncryptionKeyURL')]",
          "KeyEncryptionAlgorithm": "[parameters('vmEncryptionSettings').keyEncryptionAlgorithm]",
          "VolumeType": "[parameters('vmEncryptionSettings').volumeType]",
          "EncryptionOperation": "[parameters('vmEncryptionSettings').encryptionOperation]"
        },
        "protectedSettings": {
          "AADClientSecret": "[parameters('aadClientSecret')]"
        }
      }
    },
    {
      "type": "Microsoft.Compute/virtualMachines/extensions",
      "name": "[concat(parameters('resourceNames').vms.sqlw,'/', parameters('vmEncryptionSettings').diskEncryptionExtensionName)]",
      "apiVersion": "2016-04-30-preview",
      "tags": {
        "Project": "BluePrint"
      },
      "location": "[resourceGroup().location]",
      "properties": {
        "publisher": "Microsoft.Azure.Security",
        "type": "AzureDiskEncryption",
        "typeHandlerVersion": "[parameters('vmEncryptionSettings').diskEncryptionExtensionVersion]",
        "autoUpgradeMinorVersion": true,
        "forceUpdateTag": "[parameters('vmEncryptionSettings').sequenceVersion]",
        "settings": {
          "AADClientID": "[parameters('aadClientID')]",
          "KeyVaultURL": "[parameters('vmEncryptionSettings').keyVaultURL]",
          "KeyEncryptionKeyURL": "[parameters('keyEncryptionKeyURL')]",
          "KeyEncryptionAlgorithm": "[parameters('vmEncryptionSettings').keyEncryptionAlgorithm]",
          "VolumeType": "[parameters('vmEncryptionSettings').volumeType]",
          "EncryptionOperation": "[parameters('vmEncryptionSettings').encryptionOperation]"
        },
        "protectedSettings": {
          "AADClientSecret": "[parameters('aadClientSecret')]"
        }
      }
    },
    {
      "type": "Microsoft.Compute/virtualMachines/extensions",
      "name": "[concat(parameters('resourceNames').vms.sql,copyIndex(),'/', parameters('vmEncryptionSettings').diskEncryptionExtensionName)]",
      "apiVersion": "2016-04-30-preview",
      "tags": {
        "Project": "BluePrint"
      },
      "location": "[resourceGroup().location]",
      "copy": {
        "name": "sqlDiskEncryptionLoop",
        "count": 2
      },
      "properties": {
        "publisher": "Microsoft.Azure.Security",
        "type": "AzureDiskEncryption",
        "typeHandlerVersion": "[parameters('vmEncryptionSettings').diskEncryptionExtensionVersion]",
        "autoUpgradeMinorVersion": true,
        "forceUpdateTag": "[parameters('vmEncryptionSettings').sequenceVersion]",
        "settings": {
          "AADClientID": "[parameters('aadClientID')]",
          "KeyVaultURL": "[parameters('vmEncryptionSettings').keyVaultURL]",
          "KeyEncryptionKeyURL": "[parameters('keyEncryptionKeyURL')]",
          "KeyEncryptionAlgorithm": "[parameters('vmEncryptionSettings').keyEncryptionAlgorithm]",
          "VolumeType": "[parameters('vmEncryptionSettings').volumeType]",
          "EncryptionOperation": "[parameters('vmEncryptionSettings').encryptionOperation]"
        },
        "protectedSettings": {
          "AADClientSecret": "[parameters('aadClientSecret')]"
        }
      }
    },
    {
      "type": "Microsoft.Compute/virtualMachines/extensions",
      "name": "[concat(parameters('resourceNames').vms.web,copyIndex(),'/', parameters('vmEncryptionSettings').diskEncryptionExtensionName)]",
      "apiVersion": "2016-04-30-preview",
      "tags": {
        "Project": "BluePrint"
      },
      "location": "[resourceGroup().location]",
      "copy": {
        "name": "webDiskEncryptionLoop",
        "count": "[parameters('numberOfWebInstances')]"
      },
      "properties": {
        "publisher": "Microsoft.Azure.Security",
        "type": "AzureDiskEncryption",
        "typeHandlerVersion": "[parameters('vmEncryptionSettings').diskEncryptionExtensionVersion]",
        "autoUpgradeMinorVersion": true,
        "forceUpdateTag": "[parameters('vmEncryptionSettings').sequenceVersion]",
        "settings": {
          "AADClientID": "[parameters('aadClientID')]",
          "KeyVaultURL": "[parameters('vmEncryptionSettings').keyVaultURL]",
          "KeyEncryptionKeyURL": "[parameters('keyEncryptionKeyURL')]",
          "KeyEncryptionAlgorithm": "[parameters('vmEncryptionSettings').keyEncryptionAlgorithm]",
          "VolumeType": "[parameters('vmEncryptionSettings').volumeType]",
          "EncryptionOperation": "[parameters('vmEncryptionSettings').encryptionOperation]"
        },
        "protectedSettings": {
          "AADClientSecret": "[parameters('aadClientSecret')]"
        }
      }
    }
  ],
  "outputs": {}
}