{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "resourceNames": {
      "type": "object"
    },
    "numberOfWebInstances": {
      "type": "int"
    },
    "backupInfo": {
      "type": "object"
    }
  },
  "variables": {
    "backupFabric": "Azure",
    "v2VmType": "Microsoft.Compute/virtualMachines",
    "v2VmContainer": "iaasvmcontainer;iaasvmcontainerv2;",
    "v2VmContainerNamePrefix": "iaasvmcontainerv2;",
    "v2Vm": "vm;iaasvmcontainerv2;"
  },
  "resources": [
    {
      "type": "Microsoft.RecoveryServices/vaults/backupFabrics/protectionContainers/protectedItems",
      "apiVersion": "2016-06-01",
      "tags": {
        "Project": "BluePrint"
      },
      "location": "[resourceGroup().location]",
      "name": "[concat(parameters('backupInfo').rcVaultName,'/',variables('backupFabric'),'/',variables('v2VmContainer'),concat(resourceGroup().name,';',parameters('resourceNames').vms.adpdc),'/',variables('v2Vm'),concat(resourceGroup().name,';',parameters('resourceNames').vms.adpdc))]",
      "properties": {
        "protectedItemType": "[variables('v2VmType')]",
        "policyId": "[resourceId('Microsoft.RecoveryServices/vaults/backupPolicies',parameters('backupInfo').rcVaultName,parameters('backupInfo').backupPolicy)]",
        "sourceResourceId": "[resourceId('Microsoft.Compute/virtualMachines',parameters('resourceNames').vms.adpdc)]"
      }
    },
    {
      "type": "Microsoft.RecoveryServices/vaults/backupFabrics/protectionContainers/protectedItems",
      "apiVersion": "2016-06-01",
      "tags": {
        "Project": "BluePrint"
      },
      "location": "[resourceGroup().location]",
      "name": "[concat(parameters('backupInfo').rcVaultName,'/',variables('backupFabric'),'/',variables('v2VmContainer'),concat(resourceGroup().name,';',parameters('resourceNames').vms.adbdc),'/',variables('v2Vm'),concat(resourceGroup().name,';',parameters('resourceNames').vms.adbdc))]",
      "properties": {
        "protectedItemType": "[variables('v2VmType')]",
        "policyId": "[resourceId('Microsoft.RecoveryServices/vaults/backupPolicies',parameters('backupInfo').rcVaultName,parameters('backupInfo').backupPolicy)]",
        "sourceResourceId": "[resourceId('Microsoft.Compute/virtualMachines',parameters('resourceNames').vms.adbdc)]"
      }
    },
    {
      "type": "Microsoft.RecoveryServices/vaults/backupFabrics/protectionContainers/protectedItems",
      "apiVersion": "2016-06-01",
      "tags": {
        "Project": "BluePrint"
      },
      "location": "[resourceGroup().location]",
      "name": "[concat(parameters('backupInfo').rcVaultName,'/',variables('backupFabric'),'/',variables('v2VmContainer'),concat(resourceGroup().name,';',parameters('resourceNames').vms.mgt),'/',variables('v2Vm'),concat(resourceGroup().name,';',parameters('resourceNames').vms.mgt))]",
      "properties": {
        "protectedItemType": "[variables('v2VmType')]",
        "policyId": "[resourceId('Microsoft.RecoveryServices/vaults/backupPolicies',parameters('backupInfo').rcVaultName,parameters('backupInfo').backupPolicy)]",
        "sourceResourceId": "[resourceId('Microsoft.Compute/virtualMachines',parameters('resourceNames').vms.mgt)]"
      }
    },
    {
      "type": "Microsoft.RecoveryServices/vaults/backupFabrics/protectionContainers/protectedItems",
      "apiVersion": "2016-06-01",
      "tags": {
        "Project": "BluePrint"
      },
      "location": "[resourceGroup().location]",
      "name": "[concat(parameters('backupInfo').rcVaultName,'/',variables('backupFabric'),'/',variables('v2VmContainer'),concat(resourceGroup().name,';',parameters('resourceNames').vms.sqlw),'/',variables('v2Vm'),concat(resourceGroup().name,';',parameters('resourceNames').vms.sqlw))]",
      "properties": {
        "protectedItemType": "[variables('v2VmType')]",
        "policyId": "[resourceId('Microsoft.RecoveryServices/vaults/backupPolicies',parameters('backupInfo').rcVaultName,parameters('backupInfo').backupPolicy)]",
        "sourceResourceId": "[resourceId('Microsoft.Compute/virtualMachines',parameters('resourceNames').vms.sqlw)]"
      }
    },
    {
      "type": "Microsoft.RecoveryServices/vaults/backupFabrics/protectionContainers/protectedItems",
      "apiVersion": "2016-06-01",
      "tags": {
        "Project": "BluePrint"
      },
      "location": "[resourceGroup().location]",
      "copy": {
        "name": "sqlBackupVMProtectedItemLoop",
        "count": 2
      },
      "name": "[concat(parameters('backupInfo').rcVaultName,'/',variables('backupFabric'),'/',variables('v2VmContainer'),concat(resourceGroup().name,';',concat(parameters('resourceNames').vms.sql,copyIndex())),'/',variables('v2Vm'),concat(resourceGroup().name,';',concat(parameters('resourceNames').vms.sql,copyIndex())))]",
      "properties": {
        "protectedItemType": "[variables('v2VmType')]",
        "policyId": "[resourceId('Microsoft.RecoveryServices/vaults/backupPolicies',parameters('backupInfo').rcVaultName,parameters('backupInfo').backupPolicy)]",
        "sourceResourceId": "[resourceId('Microsoft.Compute/virtualMachines',concat(parameters('resourceNames').vms.sql,copyIndex()))]"
      }
    },
    {
      "type": "Microsoft.RecoveryServices/vaults/backupFabrics/protectionContainers/protectedItems",
      "apiVersion": "2016-06-01",
      "tags": {
        "Project": "BluePrint"
      },
      "location": "[resourceGroup().location]",
      "copy": {
        "name": "webBackupVMProtectedItemLoop",
        "count": "[parameters('numberOfWebInstances')]"
      },
      "name": "[concat(parameters('backupInfo').rcVaultName,'/',variables('backupFabric'),'/',variables('v2VmContainer'),concat(resourceGroup().name,';',concat(parameters('resourceNames').vms.web,copyIndex())),'/',variables('v2Vm'),concat(resourceGroup().name,';',concat(parameters('resourceNames').vms.web,copyIndex())))]",
      "properties": {
        "protectedItemType": "[variables('v2VmType')]",
        "policyId": "[resourceId('Microsoft.RecoveryServices/vaults/backupPolicies',parameters('backupInfo').rcVaultName,parameters('backupInfo').backupPolicy)]",
        "sourceResourceId": "[resourceId('Microsoft.Compute/virtualMachines',concat(parameters('resourceNames').vms.web,copyIndex()))]"
      }
    }
  ],
  "outputs": {}
}