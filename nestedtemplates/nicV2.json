{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "location": {
      "type": "string"
    },
    "resourceNames": {
      "type": "object"
    },
    "derivedIds": {
      "type": "object"
    },
    "adPDCNICIPAddress": {
      "type": "string"
    },
    "adBDCNICIPAddress": {
      "type": "string"
    },
    "sql0IPAddress": {
      "type": "string"
    },
    "sql1IPAddress": {
      "type": "string"
    },
    "sqlwIPAddress": {
      "type": "string"
    },
    "mgtIPAddress": {
      "type": "string"
    },
    "webSubnet": {
      "type": "object"
    },
    "numberOfWebInstances": {
      "type": "int"
    },
    "staticIPWEBStart": {
      "type": "int"
    }
  },
  "variables": {},
  "resources": [
    {
      "name": "[parameters('resourceNames').nics.adpdc]",
      "type": "Microsoft.Network/networkInterfaces",
      "location": "[parameters('location')]",
      "apiVersion": "2015-06-15",
      "tags": {
        "Project": "BluePrint"
      },
      "properties": {
        "ipConfigurations": [
          {
            "name": "ipconfig1",
            "properties": {
              "privateIPAllocationMethod": "Static",
              "privateIPAddress": "[parameters('adPDCNICIPAddress')]",
              "subnet": {
                "id": "[parameters('derivedIds').dcSubnet]"
              }
            }
          }
        ],
        "networkSecurityGroup": {
          "id": "[parameters('derivedIds').dcNSG]"
        }
      }
    },
    {
      "name": "[parameters('resourceNames').nics.adbdc]",
      "type": "Microsoft.Network/networkInterfaces",
      "location": "[parameters('location')]",
      "apiVersion": "2015-06-15",
      "tags": {
        "Project": "BluePrint"
      },
      "properties": {
        "ipConfigurations": [
          {
            "name": "ipconfig1",
            "properties": {
              "privateIPAllocationMethod": "Static",
              "privateIPAddress": "[parameters('adBDCNICIPAddress')]",
              "subnet": {
                "id": "[parameters('derivedIds').dcSubnet]"
              }
            }
          }
        ],
        "networkSecurityGroup": {
          "id": "[parameters('derivedIds').dcNSG]"
        }
      }
    },
    {
      "name": "[parameters('resourceNames').nics.sql0]",
      "type": "Microsoft.Network/networkInterfaces",
      "location": "[parameters('location')]",
      "apiVersion": "2015-06-15",
      "tags": {
        "Project": "BluePrint"
      },
      "properties": {
        "ipConfigurations": [
          {
            "name": "ipconfig1",
            "properties": {
              "privateIPAllocationMethod": "Static",
              "subnet": {
                "id": "[parameters('derivedIds').sqlSubnet]"
              },
              "privateIPAddress": "[parameters('sql0IPAddress')]",
              "loadBalancerBackendAddressPools": [
                {
                  "id": "[parameters('derivedIds').sqlBEAddressPoolID]"
                }
              ]
            }
          }
        ],
        "networkSecurityGroup": {
          "id": "[parameters('derivedIds').sqlNSG]"
        }
      }
    },
    {
      "name": "[parameters('resourceNames').nics.sql1]",
      "type": "Microsoft.Network/networkInterfaces",
      "location": "[parameters('location')]",
      "apiVersion": "2015-06-15",
      "tags": {
        "Project": "BluePrint"
      },
      "properties": {
        "ipConfigurations": [
          {
            "name": "ipconfig1",
            "properties": {
              "privateIPAllocationMethod": "Static",
              "subnet": {
                "id": "[parameters('derivedIds').sqlSubnet]"
              },
              "privateIPAddress": "[parameters('sql1IPAddress')]",
              "loadBalancerBackendAddressPools": [
                {
                  "id": "[parameters('derivedIds').sqlBEAddressPoolID]"
                }
              ]
            }
          }
        ],
        "networkSecurityGroup": {
          "id": "[parameters('derivedIds').sqlNSG]"
        }
      }
    },
    {
      "name": "[parameters('resourceNames').nics.sqlw]",
      "type": "Microsoft.Network/networkInterfaces",
      "location": "[parameters('location')]",
      "apiVersion": "2015-06-15",
      "tags": {
        "Project": "BluePrint"
      },
      "properties": {
        "ipConfigurations": [
          {
            "name": "ipconfig1",
            "properties": {
              "privateIPAllocationMethod": "Static",
              "privateIPAddress": "[parameters('sqlwIPAddress')]",
              "subnet": {
                "id": "[parameters('derivedIds').sqlSubnet]"
              }
            }
          }
        ],
        "networkSecurityGroup": {
          "id": "[parameters('derivedIds').sqlNSG]"
        }
      }
    },
    {
      "name": "[parameters('resourceNames').nics.mgt]",
      "type": "Microsoft.Network/networkInterfaces",
      "location": "[parameters('location')]",
      "dependsOn": [],
      "apiVersion": "2015-06-15",
      "tags": {
        "Project": "BluePrint"
      },
      "properties": {
        "ipConfigurations": [
          {
            "name": "ipconfig1",
            "properties": {
              "privateIPAllocationMethod": "Static",
              "publicIPAddress": {
                "id": "[resourceId('Microsoft.Network/publicIPAddresses', parameters('resourceNames').publicIPs.mgt)]"
              },
              "privateIPAddress": "[parameters('mgtIPAddress')]",
              "subnet": {
                "id": "[parameters('derivedIds').mgtSubnet]"
              }
            }
          }
        ],
        "networkSecurityGroup": {
          "id": "[parameters('derivedIds').mgtNSG]"
        }
      }
    },
    {
      "apiVersion": "2015-05-01-preview",
      "type": "Microsoft.Network/networkInterfaces",
      "name": "[concat(parameters('resourceNames').nics.web, copyindex())]",
      "location": "[resourceGroup().location]",
      "tags": {
        "Project": "BluePrint"
      },
      "copy": {
        "name": "webNICLoop",
        "count": "[parameters('numberOfWebInstances')]"
      },
      "dependsOn": [],
      "properties": {
        "ipConfigurations": [
          {
            "name": "ipconfig1",
            "properties": {
              "privateIPAllocationMethod": "Static",
              "privateIPAddress": "[concat(split(parameters('webSubnet').properties.addressPrefix, '0/')[0], add(copyindex(), parameters('staticIPWEBStart')))]",
              "subnet": {
                "id": "[parameters('derivedIds').webSubnet]"
              }
            }
          }
        ],
        "networkSecurityGroup": {
          "id": "[parameters('derivedIds').webNSG]"
        }
      }
    }
  ],
  "outputs": {}
}
